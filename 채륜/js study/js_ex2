        break;
    case 9:
        result = '뱀'
        break;
    case 10:
        result = '말'
        break;
    case 11:
        result = '양'
        break;
    default :
        break;
    }
    alert(year + '년에 태어났다면 ' + result + ' 띠입니다.')

(물결표로 하기)

